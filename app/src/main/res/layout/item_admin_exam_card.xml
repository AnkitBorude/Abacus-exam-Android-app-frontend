<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/gradient_2">

        <TextView
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton_green"
            android:gravity="center"
            android:text="Single"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="4dp"
            />
        <!-- Exam Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:text="Exam Title"
            android:textColor="@color/white"/>

        <!-- Exam Duration -->
        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 120 mins"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

        <!-- Exam Level -->
        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 2"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <!-- Total Questions -->
        <TextView
            android:id="@+id/textViewTotalQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Questions: 10"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/totalmarksperquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks per question : 2"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks : 120"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/texttotaltimesattended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Total Times Attended : 10"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/texttotaldistinctattended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Total Distinct Student Attended : 10"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/texthighestscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest Score : 10"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <!-- Attend Button  -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundbutton_red"
            android:padding="10dp"
            android:text="Activate "
            android:id="@+id/buttonAttend"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/roundbutton_blue"
            android:padding="8dp"
            android:text="More Options..."
            android:drawableRight="@drawable/baseline_more_vert_24"
            android:id="@+id/buttonMoreOptions"
            android:textColor="@android:color/white" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>