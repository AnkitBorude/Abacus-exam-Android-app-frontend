<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Exam Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Exam Title" />

        <!-- Exam Duration -->
        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 120 mins"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <!-- Exam Level -->
        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 2"
            android:textSize="16sp"/>

        <!-- Total Questions -->
        <TextView
            android:id="@+id/textViewTotalQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Questions: 10"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/totalmarksperquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks per question : 2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks : 120"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/texttotaltimesattended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Total Times Attended : 10"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/texttotaldistinctattended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Total Distinct Student Attended : 10"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/texthighestscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest Score : 10"
            android:textSize="16sp"/>
        <!-- Attend Button  -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundbutton_red"
            android:padding="10dp"
            android:text="Activate "
            android:id="@+id/buttonAttend"
            android:enabled="false"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>