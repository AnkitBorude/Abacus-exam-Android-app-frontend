<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/gradient_2">

        <!-- Student Name -->
        <TextView
            android:id="@+id/textViewStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Student Name"
            android:textColor="@color/white"/>


        <!-- Student Email -->
        <TextView
            android:id="@+id/textViewStudentEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <!-- Student Level -->
        <TextView
            android:id="@+id/textViewStudentLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: "
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <!-- Student Class -->
        <TextView
            android:id="@+id/textViewStudentClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class: "
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <!-- Student Phone Number -->
        <TextView
            android:id="@+id/textViewStudentPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <!-- Attend Button (kept unchanged as requested) -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundbutton_green"
            android:padding="10dp"
            android:text="VIEW RESULTS"
            android:id="@+id/buttonAttend"
            android:textColor="@android:color/white" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>